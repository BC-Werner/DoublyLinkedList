}

// Push a new Node to the head of the List
void DoublyLinkedList::push_front(int data) {
    if (this->head() == NULL) {
        Node *node = new Node(data);
    } else {
        Node *node = new Node(data, NULL, this->head());
        this->setHead(node);
    }
}


